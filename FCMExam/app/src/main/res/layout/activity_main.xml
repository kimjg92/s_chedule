<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shinhan.fcmexam.MainActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/easy_header_bi"
            android:gravity="center"
            android:onClick="onClickHostPageButton"/>
        <Button
            android:text="after connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickAfterConnectionButton"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffbb44">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="거래내역 간편보기"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <ListView
        android:id="@+id/bank_fragmnet_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">


    </ListView>


</LinearLayout>
